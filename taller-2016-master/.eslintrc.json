{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "globals": {
    "require": true
  },
  "rules": {
    // enable additional rules
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    // disable rules from base configurations
    "no-console": "off"
  },
  "ecmaVersion": 5
}